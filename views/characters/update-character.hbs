<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Update Character</h2>
            <hr>

            <form action="/characters/update/{{character.id}}" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Name: </label>
                        <input type="text" class="form-control" id="emailInput" name="name" value="{{character.name}}">
                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Occupation: </label>
                        <input type="text" class="form-control" id="pwdInput" name="occupation"
                            value="{{character.occupation}}">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Weapon: </label>
                    <input type="text" class="form-control" id="usernameInput" name="weapon"
                        value="{{character.weapon}}">
                </div>

                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Debt: </label>
                    <select name="debt">
                        <option disabled selected>{{character.debt}}</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Update Character</button>
                </div>

            </form>
        </div>
    </div>

</div>