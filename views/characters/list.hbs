<div class="container pt-5 mt-5">
  <div class="row">
    <div class="col">
      <h2 class="text-center fw-bold">Lista de Personajes</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table table-striped align-middle mt-5">
        <thead class="table-dark">
          <tr>
            <th scope="col" class="text-center">#</th>
            <th scope="col" class="text-center">Personaje</th>
          </tr>
        </thead>
        <tbody>
          {{#each characters}}
            <tr>
              {{!-- <th scope="row" class="text-center">{{this.counter}}</th> --}}
              <th scope="row" class="text-center">{{id}}</th>
              <td class="text-center"><a
                  class="text-dark text-uppercase"
                  href="/detalles/{{id}}"
                >{{name}}</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>