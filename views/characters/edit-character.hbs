<div class="container">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <h1>Edit character</h1>

                <hr>

                <form action="/characters/create" method="POST">
                    <label>
                        Name: <input type="text" name="name" placeholder="Name" value="{{character.name}}">
                    </label>

                    <label>
                        Occupation: <input type="text" name="occupation" placeholder="Occupation" value="{{character.occupation}}">
                    </label>

                    <label>
                        Weapon: <input type="text" name="weapon" placeholder="Weapon" value="{{character.weapon}}">
                    </label>
                    
                    <div>
                      <p>Debt:</p>
                      <label for="debtChoice1">True</label>
                      <input type="radio" id="debtChoice1" name="debt" value="true">

                      <label for="debtChoice2">False</label>
                      <input type="radio" id="debtChoice2" name="debt" value="false">
                    </div>

                    <br>

                    <input type="submit" value="Update character" class="btn-dark btn">

                </form>

            </div>
        </div>
    </div>

</div>