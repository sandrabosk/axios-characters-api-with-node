<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-6 mt-5">
            <h1>Editar Personaje</h1>
            <hr>
            <form action="/characters/{{character.id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre: </label>
                    <input id="name" class="form-control" name="name" value="{{character.name}}">
                </div>
                <div class="mb-3">
                    <label for="occptn" class="form-label">Ocupaci√≥n: </label>
                    <input type="text" id="occptn" class="form-control" name="occupation"
                        value="{{character.occupation}}">
                </div>
                <div class="mb-3">
                    <label for="weapon" class="form-label">Arma: </label>
                    <input type="text" id="weapon" class="form-control" name="weapon" value="{{character.weapon}}">
                </div>
                <div class="d-grid">
                    <input type="submit" class="btn btn-dark" value="Editar">
                </div>
            </form>
        </div>
    </div>
</div>