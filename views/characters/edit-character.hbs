<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar personaje</h1>
            <hr>
            <form action="/characters/{{character.id}}/editar" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="nam" class="form-label">Name</label>
                            <input type="text" class="form-control" id="nam" name="name" value="{{character.name}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="wea" class="form-label">Weapon</label>
                            <input type="text" class="form-control" id="wea" name="weapon" value="{{character.weapon}}">
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="occ" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occ" name="occupation" value="{{character.occupation}}">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Editar personaje</button>
                </div>
            </form>
        </div>
    </div>
</div>