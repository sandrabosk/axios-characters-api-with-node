<div class="container">

    <div class="row justify-content-center ">

        <div class="col-md-6">

            <h1>Edit {{char.name}}</h1>
            <hr>

            <form action="/edit/{{char.id}}" method="POST">



                <div class="mb-3">
                    <label for="" class="form-label">Name</label>
                    <input type="text" class="form-control" value="{{char.name}}" name="name">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Occupation</label>
                    <input type="text" class="form-control" value="{{char.occupation}}" name="occupation">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">weapon</label>
                    <input type="text" class="form-control" value="{{char.weapon}}" name="weapon">
                </div>


                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Edit</button>
                </div>

            </form>
        </div>
    </div>

</div>