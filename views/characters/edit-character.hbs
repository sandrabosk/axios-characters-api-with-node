<h1>Update Character</h1>
<form action="/character/edit/{{character.id}}" method="post">
    <label for="name">Name:</label><input type="text" name="name" placeholder="Name" value="{{character.name}}">
    <label for="occupation">Occupation:</label><input type="text" name="occupation" placeholder="Occupation"
        value="{{character.occupation}}">
    <label for="weapon">Weapon:</label><input type="text" name="weapon" placeholder="Weapon"
        value="{{character.weapon}}">
    <label for="debt">Debt:</label><select name="debt">
        <option value="{{character.debt}}" selected>{{character.debt}}</option>
        {{#each debtArray}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
    <button type="submit">Update</button>
</form>