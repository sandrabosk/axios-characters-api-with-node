<div class="text edit">
    <h2>Update the character</h2>

    <form action="/characters/{{character.id}}/edit" method="POST">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" value="{{character.name}}">
        
        <label for="occupation" class="form-label">Occupation</label>
        <input type="text" id="occupation" name="occupation" value="{{character.occupation}}">
        
        <label for="weapon" class="form-label">Weapon</label>
        <input type="text" id="weapon" name="weapon" value="{{character.weapon}}">

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="{{character.debt}}" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Debt
            </label>
        </div>

        <button type="submit" class="btn btn-success">Update Character</button>
    </form>
</div>