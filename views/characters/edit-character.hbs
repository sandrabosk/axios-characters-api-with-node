<div class="container">
    <div class="row-justify-content">
        <div class="col-d-6">

            <h2>Editar personaje </h2>

            <hr>


            <form action="/characters/{{id}}/edit" method="POST">
                <label>
                    Name: <input type="text" name="name" value="{{name}}">
                </label>

                <label>
                    Occupation: <input type="text" name="occupation" value="{{occupation}}">
                </label>

                <label>
                    Weapon: <input type="text" name="weapon" value="{{weapon}}">
                </label>

                <input type="submit" value="Update character" class="btn-dark btn">

            </form>

        </div>
    </div>
</div>