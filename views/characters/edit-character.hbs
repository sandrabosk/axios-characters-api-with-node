<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Edit {{character.name}}</h1>
            <hr>
            <form action="/characters/{{character.id}}/edit" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name"
                                placeholder="Write character's name" value="{{character.name}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="weapon" class="form-label">Weapon</label>
                            <input type="text" class="form-control" id="weapon" name="weapon"
                                placeholder="Write a weapon" value="{{character.weapon}}">
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="occupation" class="form-label">Ocuppation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation"
                        placeholder="Write an ocuppation" value="{{character.occupation}}">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Edit character</button>
                </div>
            </form>
        </div>
    </div>
</div>