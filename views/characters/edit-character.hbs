<h1>Edit character</h1>

<form action="/characters/edit/{{id}}" method="post">
    {{!-- 
    {
    "name": "COSA",
    "occupation": "COSA",
    "debt": true,
    "weapon": "COSA"
    } 
    --}}
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value={{name}}>

    <label for="occupation">Occupation</label>
    <input type="text" name="occupation" id="occupation" value={{occupation}}>

    {{!-- <label for="debt">Debt</label>
    <input type="text" name="debt" id="debt" value="{{debt}}"> --}}
    <label for="debt">debt:</label>
    <input type="checkbox" name="debt" id="debt" value="true" {{#if debt}} checked {{/if}}>

    <label for="weapon">Weapon</label>
    <input type="text" name="weapon" id="weapon" value={{weapon}}>

    {{!-- <input type="hidden" name="id" value={{id}}> --}}
    <button type="submit">Edit character</button>
</form>