<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Details character</h1>
            <hr>

            <form action="/characters/{{character._id}}" method="POST">

                <div class="mb-3">
                    <label for="nameInput" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="nameInput" name="name" value="{{character.name}}">
                </div>

                <div class="mb-3">
                    <label for="occupationInput" class="form-label">Occupation:</label>
                    <input type="text" class="form-control" id="occupationInput" name="occupation"
                        value="{{character.occupation}}">
                </div>

                <div class="mb-3">
                    <label for="weaponInput" class="form-label">Weapon:</label>
                    <input type="text" class="form-control" id="weaponnput" name="weapon" value="{{character.weapon}}">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Save</button>
                </div>


            </form>
        </div>
    </div>

</div>