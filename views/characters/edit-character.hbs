<h1>estas en edit</h1>

<form action="/characters/{{id}}/update" method="post">
    <div class="mb-3">
        <label for="" class="form-label">Name:</label>
        <input type="text" value="{{name}}" name="name" class="form-control w-25">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Occupation:</label>
        <input type="text" value="{{occupation}}" name="occupation" class="form-control w-25">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Debt:</label>
        <select class="form-select form-select-sm w-25" name="debt" aria-label=".form-select-sm example">
            <option selected>True</option>
            <option>False</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Weapon:</label>
        <input type="text" value="{{weapon}}" name="weapon" class="form-control w-25">
    </div>
    <button type="submit" class="btn btn-primary">Update!</button>
</form>