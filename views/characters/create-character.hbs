<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>Create a new character</h1>
            <hr>

            <form action="/characters/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="occupation" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="occupation" name="occupation">
                </div>

                <div class="mb-3 d-flex justify-content-start">
                    <label for="debt" class="form-label">Debt</label>
                    <input class="md" type="checkbox" class="form-control" id="debt" name="debt">
                </div>

                <div class="mb-3 ">
                    <label for="catchPhrase" class="form-label">weapon</label>
                    <input type="text" class="form-control" id="weapon" name="weapon">
                </div>

                <button type="submit" class="btn btn-dark">Create a new character</button>
                <a class="btn btn-dark ml-3" href="/">Back to menu</a>
            </form>

        </div>
    </div>
</div>