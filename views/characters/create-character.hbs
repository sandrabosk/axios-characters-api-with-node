<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Create Character</h1>
            <hr>

            <form action="/characters/create" method="POST">
                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Name</label>
                        <input type="text" class="form-control" id="emailInput" name="name">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Occupation</label>
                        <input type="occupation" class="form-control" id="pwdInput" name="occupation">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <select class="form-select" name="debt">
                        <option selected>Select One</option>
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="imageInput" class="form-label">Weapon</label>
                    <input type="text" class="form-control" id="imageInput" name="weapon">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block mb-5">Create character</button>
                </div>
            </form>
        </div>
    </div>

</div>