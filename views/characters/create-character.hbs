<div class="container mt-5">

  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Create new character:</h1>

      <form action="/characters/create" method="POST">
        <div class="row">
          <div class="col">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>
          </div>
          <div class="col">
            <div class="mb-3">
              <label for="occupation" class="form-label">Occupation</label>
              <input type="text" class="form-control" id="occupation" name="occupation">
            </div>
          </div>
        </div>
        <div class="col">
          <div class="mb-3">
            <label for="debt" class="form-label">Debt</label>
            <input id="debt" name="debt" type="checkbox" value="true" />
            <input id="debt" name="debt" type="hidden" value="false" />
          </div>
        </div>
        <div class="col">
          <div class="mb-3">
            <label for="weapon" class="form-label">Weapon</label>
            <input type="text" class="form-control" id="weapon" name="weapon">
          </div>
        </div>
        <div class="d-grid mt-5">
          <button type="submit" class="btn btn-dark btn-lg">Create new character</button>
        </div>
      </form>
    </div>
  </div>
</div>