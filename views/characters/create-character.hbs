<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Crear Personaje</h1>

            <hr>

            <form action="/crear" method="POST">
                <div class="mb-3">
                    <label for="tit" class="form-label">Name</label>
                    <input type="text" class="form-control" id="tit" name="name">
                </div>

                <div class="mb-3">
                    <label for="aut" class="form-label">Occupation</label>
                    <input type="text" class="form-control" id="aut" name="occupation">
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Weapon</label>
                    <input type="text" class="form-control" id="desc" name="weapon">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Crear Personaje</button>
                </div>
            </form>

        </div>
    </div>
</div>