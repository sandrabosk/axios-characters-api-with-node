<div class="container mt-5">

    <div class="row">

        <div class="col-md-3">

            <article class="character-card mb-5">

                <h2>Details of {{ character.name }}</h2>
                <hr>
                <p>Occupation: {{ character.occupation }}</p>
                <p>Weapon: {{ character.weapon }}</p>


                <div class="d-grid">

                    <div class="btn-group">
                        <a href="/characters/{{character.id}}/editar" class="btn btn-warning btn-sm">Editar</a>
                        {{!-- <a href="/???" class="btn btn-danger btn-sm">Eliminar</a> --}}
                    </div>
                    <form action="/characters/{{character.id}}/delete" method="POST" style="display: inline">
                        <input type="submit" value="Eliminar estudiante" class="btn btn-danger">
                    </form>

                </div>

            </article>

        </div>

    </div>

</div>