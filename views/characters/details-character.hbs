<div class="container mt-5">
    <div class="row justify-content-center">

        <h2>Details of {{ character.name }}</h2>

        <h3> Occupation: {{ character.occupation }} </h3>

        <p> Weapon: {{ character.weapon }} </p>

        <a href="/personajes/{{character.id}}/editar">Editar Personaje</a>

        <form action="/personajes/{{character.id}}/eliminar" method="POST" style="display: inline">
            <input type="submit" value="Delete">
        </form>

    </div>
</div>