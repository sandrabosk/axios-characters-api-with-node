<div class="container">
    <div class="mt-5">
        <h2>Details of {{ character.name }}</h2>
        <h3> Occupation: {{ character.occupation }} </h3>
        <p> Weapon: {{ character.weapon }} </p>
    </div>
    <div class="d-flex mt-5">
        <a class="btn btn-outline-dark button" href="/characters">Back to list</a>
        <a class="btn btn-outline-warning button" href="/characters/edit/{{character.id}}">Editar</a>
        <form action="/characters/delete/{{character.id}}" method="post">
            <input class="btn btn-outline-danger button" type="submit" value="Delete">
        </form>
    </div>
</div>