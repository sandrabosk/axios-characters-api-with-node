<div class="container mt-5">

    <h2>Details of {{ character.name }}</h2>

    <hr>

    <p> Occupation: {{ character.occupation }} </h3>

    <p> Weapon: {{ character.weapon }} </p>

    <p> Debt: {{ character.debt }} </p>

    <a href="/character/{{character.id}}/edit" class="btn btn-dark">Editar</a>

    <a href="/characters" class="btn btn-dark">Back</a>

    <form action="/character/{{character.id}}/delete" method="POST">
        <input type="submit" value="Delete profile" class="btn btn-warning">
    </form>

</div>