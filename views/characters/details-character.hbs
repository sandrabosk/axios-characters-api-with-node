<div class="container">

    <div class="row justify-content-center">

        <div class="col-6 card text-center">
            <h2>Details of {{ character.name }}</h2>


            <h3> Occupation: {{ character.occupation }} </h3>

            <p> Weapon: {{ character.weapon }} </p>

            <div class="col-12 d-grid  ">

                <div class="button-box">
                    <a href="/characters/{{character.id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form method="POST" action="/characters/{{character.id}}/delete">
                        <input class=" btn btn-danger btn-sm" type="submit" id="delete" name="delete" value="Delete">
                    </form>

                </div>



            </div>
        </div>

    </div>

</div>