<div class="container">

    <h2 class="mt-3"> Characters List </h2>
    <hr>

    <div class="row mt-5">
        {{#each characters }}

        <div class="col-3 mb-5">

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title mb-3">{{name}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{occupation}}</h6>
                    <p>{{weapon}}</p>

                    <div class="d-flex justify-content-around mt-5">
                        <a href="/characters/{{id}}" class="btn btn-outline-dark">Details</a>
                        <a href="/characters/edit/{{id}}" class="btn btn-outline-warning">Edit</a>
                        <form action="/characters/delete/{{id}}" method="post">
                            <input type="submit" value="Delete" class="btn btn-outline-danger">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>