<div class="container mt-5">
    <h1>Character List</h1>
    <div class="row">

        {{#each character}}

        <div class="col-md-3">

            <article class="character-card mb-5">

                <h4>{{name}}</h4>
                <hr>

                <div class="d-grid">

                    <a href="/characters/{{id}}" class="btn btn-dark">Ver detalles</a>
                    <a href="/edit/{{id}}" class="btn btn-warning">Editar</a>
                    <form action="/delete/{{id}}" method="POST">
                        <input type="submit" value="eliminar" class="btn btn-sm btn-danger">
                    </form>

                </div>

            </article>

        </div>
        {{/each}}
    </div>

</div>