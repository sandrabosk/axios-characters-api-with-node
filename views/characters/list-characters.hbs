<div class="container mt-5">

    <div class="row">

        {{#each characters}}

        <div class="col-md-3">

            <article class="character-card mb-5">

                <h4>{{name}}</h4>
                <hr>
                <p>Identificador: {{id}}</p>
                <p>Profesi√≥n: {{occupation}}</p>
                <p>Arma: {{weapon}}</p>

                <div class="d-grid">

                    <div class="btn-group">
                        <a href="/characters/{{id}}" class="btn btn-dark btn-sm">Details</a>
                        <a href="/characters/edit/{{id}}" class=" btn btn-warning btn-sm">Edit</a>
                        <form action="/characters/{{id}}/delete" method="POST">
                            <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                        </form>
                    </div>

                </div>

            </article>

        </div>
        {{/each}}
    </div>

</div>