<div class="container mt-5">

    <div class="row">

        {{#each characters}}

        <div class="col-md-3">

            <article class="character-card mb-5">

                <h4>{{name}}</h4>
                <hr>
                <p>Identificador: {{id}}</p>
                <p>Profesi√≥n: {{occupation}}</p>
                <p>Arma: {{weapon}}</p>

                <div class="d-grid">

                    <div class="btn-group">
                        <a href="/characters/{{id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                    </div>

                </div>
                <form action="/characters/{{id}}/delete" method="POST" style="display: inline">
                    <input type="submit" value="delete" class="btn btn-danger">
                </form>


            </article>

        </div>
        {{/each}}
    </div>

</div>