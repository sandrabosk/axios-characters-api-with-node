<div class="container">
    <h2> Characters List </h2>
    <div class="container mt-5">

        <div class="row">

            {{#each characters}}

            <div class="col-md-3">

                <article class="character-card mb-5">

                    <h4>{{name}}</h4>
                    <hr>
                    <p>Identificador: {{id}}</p>
                    <p>Profesi√≥n: {{occupation}}</p>
                    <p>Arma: {{weapon}}</p>

                    <div class="d-grid">
                        <div class="btn-group">
                            <form action="/characters/{{id}}" class="btn btn-dark btn-sm">
                                <a href="/characters/{{id}}" class="btn btn-dark btn-sm">Ver detalles</a>
                            </form>
                            <form action="/characters/{{id}}/edit" class="btn btn-warning btn-sm">
                                <a href="/characters/{{id}}/edit" class=" btn btn-warning btn-sm">Editar</a>
                            </form>
                            <form action="/characters/{{id}}/delete" method="POST" class="btn btn-danger btn-sm">
                                <input type="submit" value="Eliminar" class="btn">
                            </form>
                        </div>

                    </div>

                </article>

            </div>
            {{/each}}
        </div>

    </div>

    <p><a href="/characters/create" class="btn btn-dark btn-sm">Crear personaje</a></p>
</div>