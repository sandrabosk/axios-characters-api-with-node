<h2> Characters List </h2>

<div class="container mt-5">
    <div class="row">

        {{#each characters }}
        <div class="col-md-3">

            <article class="character-card mb-5">

                <h4>{{name}}</h4>
                <hr>
                <p>Identificador: {{id}}</p>
                <p>Profesi√≥n: {{occupation}}</p>
                <p>Arma: {{weapon}}</p>

                <a href="/characters/{{id}}" class="btn btn-dark">Ver detalles</a>
                <a href="/edit/{{id}}" class="btn btn-dark">Editar</a>
                <form action="/delete/{{id}}" method="POST" style="display: inline">
                    <input type="submit" value="delete" class="btn btn-sm btn-danger">
                </form>


            </article>
        </div>
        {{/each}}
    </div>
</div>